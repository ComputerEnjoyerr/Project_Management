@model Project_Management.Models.Objective
@{
    ViewBag.Title = "Chi tiết công việc";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<h3>@Model.Title</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <p><strong>Mô tả:</strong><br />@Model.Description</p>
        <p><strong>Dự án:</strong> @Model.Project?.Name</p>
        <p><strong>Trạng thái:</strong> <span class="badge bg-info text-dark">@Model.Status</span></p>
        <p><strong>Ưu tiên:</strong> <span class="text-danger">@Model.Priority</span></p>
        <p><strong>Người được giao:</strong> @Model.AssignedToEmail</p>
        <p><strong>Ngày tạo:</strong> @Model.StartDate?.ToString("dd/MM/yyyy")</p>
        <p><strong>Hạn hoàn thành:</strong> @Model.DueDate?.ToString("dd/MM/yyyy")</p>
        @if (Model.Status == "Done" && Model.CompletedAt != null)
        {
            <p><strong>Hoàn thành lúc:</strong> <span class="text-success">@Model.CompletedAt?.ToString("dd/MM/yyyy")</span></p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ObjectiveId" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" asp-controller="MyTasks" class="btn btn-secondary">Quay lại</a>
    <form asp-action="Delete" method="post" asp-route-id="@Model.ObjectiveId">
        <button type="submit" onclick="return confirm('Bạn có muốn xóa?')" class="btn btn-danger">Xóa</button>
    </form>
</div>
