@model Project_Management.Models.Objective
@{
    ViewBag.Title = "Tạo công việc";
}

<div class="card shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="fa fa-plus-circle text-success me-2"></i>Tạo công việc mới</h4>
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-sm">
            <i class="fa fa-arrow-left"></i> Quay lại
        </a>
    </div>
    <hr />
    @if (ViewBag.CurrentUser != null)
    {
        <form asp-action="Create" method="post">
        <input type="hidden" asp-for="ProjectId" />
        <input type="hidden" asp-for="CreatedByEmail" value="@ViewBag.CurrentUser" />


        <div class="mb-3">
            <label class="form-label fw-bold">Tiêu đề công việc</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề..." />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Mô tả chi tiết</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập nội dung công việc..."></textarea>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Độ ưu tiên</label>
                <select asp-for="Priority" class="form-select">
                    <option>Low</option>
                    <option selected>Normal</option>
                    <option>High</option>
                    <option>Critical</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Người thực hiện</label>
                <select asp-for="AssignedToEmail" class="form-select">
                    <option value="">-- Chọn --</option>
                    @if (ViewBag.Members != null)
                    {
                        @foreach (var member in ViewBag.Members)
                        {
                            <option value="@member.Email">@member.Email</option>
                        }
                    } else
                    {
                        <option value="" disabled>Không có dữ liệu</option>
                    }

                </select>
                <span asp-validation-for="AssignedToEmail" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label class="form-label fw-bold">Hạn hoàn thành</label>
                <input asp-for="DueDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success me-2">
                <i class="fa fa-save"></i> Lưu công việc
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa fa-times"></i> Hủy
            </a>
        </div>
    </form>
    }

    <div class="mt-4 small text-muted">
        <i class="fa fa-user"></i> Người tạo: <strong>@ViewBag.CurrentUser</strong>
        <br />
        <i class="fa fa-briefcase"></i> Dự án ID: <strong>@Model.ProjectId</strong>
    </div>
</div>
