@model Project_Management.Models.Objective
<h5 class="fw-bold text-secondary mb-3">Tạo công việc mới</h5>
<div class="bg-light p-3 rounded-3 shadow-sm">
    <form asp-action="CreateTaskFromProjectDetail" asp-controller="Objective" method="post">
        <input type="hidden" name="ProjectId" asp-for="ProjectId" value="@Model.ProjectId" />

        <!-- Tên công việc -->
        <div class="mb-3">
            <label class="form-label fw-bold">Tên công việc</label>
            <input asp-for="Title" name="Title" class="form-control" placeholder="Nhập tên công việc..." required />
        </div>

        <!-- Mô tả -->
        <div class="mb-3">
            <label class="form-label fw-bold">Mô tả</label>
            <textarea asp-for="Description" name="Description" class="form-control" rows="3" placeholder="Nhập mô tả công việc..."></textarea>
        </div>

        <!-- Ưu tiên và trạng thái -->
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Mức độ ưu tiên</label>
                <select asp-for="Priority" name="Priority" class="form-select">
                    <option value="Low">Low</option>
                    <option value="Normal" selected>Normal</option>
                    <option value="High">High</option>
                    <option value="Critical">Critical</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold">Trạng thái</label>
                <select asp-for="Status" name="Status" class="form-select">
                    <option value="Todo" selected>Todo</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Review">Review</option>
                    <option value="Done">Done</option>
                </select>
            </div>
        </div>

        <!-- Người được giao -->
        <div class="mt-3">
            <label class="form-label fw-bold">Giao cho</label>
            <select asp-for="AssignedToEmail" name="AssignedToEmail" class="form-select" required>
                <option value="@ViewBag.CurrentUser">-- Chọn thành viên --</option>
                @if (ViewBag.Members != null)
                {
                    foreach (var member in ViewBag.Members)
                    {
                        <option value="@member.Email">@member.Email</option>
                    }
                }
            </select>
        </div>

        <!-- Ngày bắt đầu và hạn hoàn thành -->
        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Ngày bắt đầu</label>
                <input asp-for="StartDate" type="date" name="StartDate" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold">Hạn hoàn thành</label>
                <input asp-for="DueDate" type="date" name="DueDate" class="form-control" />
            </div>
        </div>

        <!-- Nút tạo -->
        <div class="mt-4 text-end">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Tạo công việc
            </button>
        </div>
    </form>
</div>