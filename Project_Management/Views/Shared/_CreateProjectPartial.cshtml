@model Project_Management.Models.Project
<form asp-action="CreateProject" asp-controller="Home" method="post">
    <div class="mb-3">
        <label class="form-label">Tên dự án</label>
        <input asp-for="Name" class="form-control" />
        
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Ngày bắt đầu</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Ngày kết thúc</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Phương pháp</label>
        <select asp-for="Methodology" class="form-select">
            <option value="">-- Chọn --</option>
            <option>Agile</option>
            <option>Scrum</option>
            <option>Kanban</option>
            <option>Waterfall</option>
        </select>
        <span asp-validation-for="Methodology" class="text-danger"></span>
    </div>
