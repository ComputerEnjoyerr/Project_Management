        <label class="form-label">Trạng thái</label>
        <select asp-for="Status" class="form-select">
            <option value="">-- Chọn --</option>
            <option>Planning</option>
            <option>Active</option>
            <option>Ended</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div> *@

