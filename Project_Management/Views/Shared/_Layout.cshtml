<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống quản lý dự án</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <!-- Tên nhóm -->
            <a class="navbar-brand fw-bold text-white" href="#">Nhóm 1</a>

            <!-- Nút menu khi thu nhỏ -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Khu vực menu -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Project">Dự án</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Công việc</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Thành viên</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Lịch trình</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Mô hình</a></li>
                </ul>

                <!-- Nút đăng nhập / đăng ký -->
                <div class="d-flex ms-3 mt-2 mt-lg-0">
                    <a class="btn btn-outline-light me-2" href="/Account/Login">Đăng nhập</a>
                    <a class="btn btn-warning" href="/Account/Register">Đăng ký</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-primary text-white text-center py-3 w-100"
            style="position: fixed; bottom: 0; left: 0;">
        <p class="mb-0">© Nhóm 1 - Hệ thống quản lý công việc dự án</p>
    </footer>

    <!-- Nút Lên đầu trang -->
    <button id="backToTopBtn" class="btn btn-warning rounded-circle shadow"
            style="position: fixed; bottom: 80px; right: 30px; display: none; width: 50px; height: 50px; z-index: 1050;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white"
             class="bi bi-arrow-up" viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                  d="M8 12a.5.5 0 0 0 .5-.5V4.707l2.147 2.147a.5.5 0 0 0 .707-.708l-3-3-.007-.007a.5.5 0 0 0-.7.007l-3 3a.5.5 0 1 0 .707.708L7.5 4.707V11.5A.5.5 0 0 0 8 12z" />
        </svg>
    </button>

    <script>
        // Hiện nút khi cuộn xuống 200px
        window.onscroll = function () {
            const btn = document.getElementById("backToTopBtn");
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                btn.style.display = "block";
            } else {
                btn.style.display = "none";
            }
        };

        // Khi click thì cuộn mượt lên đầu trang
        document.getElementById("backToTopBtn").addEventListener("click", function () {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
