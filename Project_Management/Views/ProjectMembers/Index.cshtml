@model IEnumerable<Project_Management.Models.ProjectMember>

@{
    ViewBag.Title = "Thành viên dự án";
    Layout = "~/Views/Shared/_Home.cshtml";
    var project = ViewBag.Project as Project_Management.Models.Project;
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-people-fill me-2"></i>
                @(project != null ? project.Name : "Dự án") - Thành viên
            </h4>
            <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addMemberModal">
                <i class="bi bi-person-plus"></i> Thêm thành viên
            </button>
        </div>

        <div class="card-body p-4">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-center">#</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        foreach (var m in Model)
                        {
                            <tr>
                                <td class="text-center">@index</td>
                                <td>@m.UserEmail</td>
                                <td>@m.Role</td>
                                <td class="text-center">
                                    <form asp-action="Remove" method="post" class="d-inline">
                                        <input type="hidden" name="projectId" value="@m.ProjectId" />
                                        <input type="hidden" name="userId" value="@m.UserEmail" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Xác nhận xóa thành viên này khỏi dự án?')">
                                            Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">
                                <i class="bi bi-person-dash me-1"></i> Chưa có thành viên nào trong dự án này
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.Partial("_AddMemberModal", project)
